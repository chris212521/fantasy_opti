<h1>Admin Panel</h1>

<div class="container">
<form action="/nfl_update" method="get">
<center>
<%= submit_tag("Update Projections", :name => '', :class=>"btn btn-search") %>
</center>
</form>


<form action="/scrape_nba_daily" method="get">
<center>
<div class="row"><%= text_field_tag :month, params[:month], placeholder: "Month", class: "search-form-text-field" %>
